<html>
<head>
    <title>[{{ total.score }}%] Mutation Testing</title>
    <style>

        body {
            color: #333333;
            font-family: "Helvetica Neue", Helvetica, Arial, sans-serif;
            font-size: 14px;
            line-height: 20px;
            text-align: center;
        }

        a, a:visited {
            text-decoration: none;
            color: #0088CC;
        }

        a:hover {
            text-decoration: underline;
        }

        #page {
            margin: 0 auto;
            width: 996px;
            text-align: justify;
        }

        #general li {
            list-style: none;
        }

        .score {
            display: inline-block;
            width: 50px;
            text-align: center;
        }

        .score0, .score0 a {
            color: #DD0000;
        }

        .score25, .score25 a {
            color: #FF8000;
        }

        .score50, .score50 a {
            color: darkseagreen;
        }

        .score75, .score75 a {
            color: limegreen;
        }

        .score100, .score100 a {
            color: forestgreen;
        }

        .score-details {
            font-size: 0.8em;
            display: inline-block;
            width: 180px;
        }

        .diff {
            border: 1px solid #CCC;
            background-color: #FFF;
            padding: 5px;
            margin-top: 5px;
        }

        .infos {
            font-size: 0.9em;
            paddin-left: 30px;
            color: #333;
        }

        .testedby {
            text-align: right;
            font-size: 0.9em;
            font-style: italic;
        }
        .captured {
            border: 1px solid green;
        }
    </style>
</head>
<body>

<div id="page">
    <div id="head">
        <h1>Score: <span class="score">{{ score }}%</span></h1>
        <h2>( {{ escaped }} escaped on {{ total }} mutants )</h2>
    </div>

    <div id="general">
        <ul>
            {% for file,info in files %}
                <li>
                    <span class="score score{{ info.scoreStep }}"><a href="#{{ file }}">{{ info.score }}%</a></span>
                    <span class="score-details">( {{ info.escaped }} escaped / {{ info.mutants }} mutants )</span>
                    <span class="score-filename"><a href="#{{ file }}">{{ file }}</a></span>
                </li>
            {% endfor %}
        </ul>
    </div>


    <div id="detail">
        {% for file,info in files %}
            <div id="{{ file }}" class="box-mutant">
                <h3>{{ file }}</h3>

                <div>
                    <span class="score score{{ info.scoreStep }}">{{ info.score }}%</span>
                    <span class="score-details">( {{ info.escaped }} escaped / {{ info.mutants }} mutants )</span>
                </div>
            </div>

            {% for mutant in info.mutantsEscaped %}
                {#<div class="testedby">(<b>test:</b> {{ mutant.fileName }} <b>method:</b> {{ mutant.methodName }})</div>#}
                <div class="diff">
                    {{ mutant.diff|raw }}
                </div>
            {% endfor %}

            {% for mutant in info.mutantsCaptured %}
                {#<div class="testedby">(<b>test:</b> {{ mutant.fileName }} <b>method:</b> {{ mutant.methodName }})</div>#}
                <div class="diff captured">
                    {{ mutant.diff|raw }}
                </div>
            {% endfor %}
        {% endfor %}

    </div>
</div>


</body>
</html>